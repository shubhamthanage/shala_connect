# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# For migrations (npm run db:migrate). Get from: Dashboard → Project Settings → Database → Connection string (URI)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
# Required for school registration & add-user (Server Actions)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Razorpay (optional - for fee payments)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
# Required for client-side checkout (same as RAZORPAY_KEY_ID)
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id

# WhatsApp Cloud API (Meta) - for notifications
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_access_token
